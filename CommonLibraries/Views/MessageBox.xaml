<Window x:Class="CommonLibraries.Views.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:CommonLibraries.Views"
            mc:Ignorable="d"
            Title="MessageBox" Height="281" Width="500" WindowStartupLocation="CenterScreen" FontSize="12">
    <Grid>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="190" Margin="10,10,0,0" TextWrapping="Wrap" Text="Message Goes Here" VerticalAlignment="Top" Width="472" FontSize="12"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="164,211,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" FontSize="12"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="244,211,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" FontSize="12"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="404,211,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" FontSize="12"/>
        <Button x:Name="btnRetry" Content="Retry" HorizontalAlignment="Left" Margin="324,211,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click" FontSize="12"/>
    </Grid>
</Window>
