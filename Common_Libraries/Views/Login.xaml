<Window x:Class="Common_Libraries.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Common_Libraries"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="432,291,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="352,291,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblUserGroup" Content="User Group:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="68"/>
        <Label x:Name="lblUsername" Content="User Name:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="68"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="68"/>
        <ComboBox x:Name="cmbUserGroups" HorizontalAlignment="Left" Margin="83,62,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="83,90,0,0" TextWrapping="Wrap" Text="EnterUsername" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="83,120,0,0" TextWrapping="Wrap" Text="EnterPassword" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
