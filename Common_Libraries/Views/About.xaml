        xmlns:local="clr-namespace:Common_Libraries"
        mc:Ignorable="d"
        Title="About" Height="350" Width="525">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="124"/>
        <Label x:Name="lblProductname" Content="Product Name: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,10,0,0" Width="87"/>
        <Label x:Name="lblVersion" Content="Version: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,38,0,0" Width="87"/>
