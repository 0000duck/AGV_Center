        <Label x:Name="lblProductname_Value" Content="Product Name Value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,10,0,0" Width="276"/>
        <Label x:Name="lblVersion_Value" Content="Version Value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,38,0,0" Width="276"/>
        <Label x:Name="lblCopyRights_Value" Content="Copy Rights Value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,66,0,0" Width="276"/>
        <Label x:Name="lblCompanyName_Value" Content="Company Name Value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,94,0,0" Width="276"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="159" Margin="139,122,0,0" TextWrapping="Wrap" Text="Description: " VerticalAlignment="Top" Width="368"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="432,291,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
