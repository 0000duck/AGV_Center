        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Common_Libraries.Views"
        mc:Ignorable="d"
        Title="MessageBox" Height="281" Width="500">
    <Grid>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="207" Margin="10,10,0,0" TextWrapping="Wrap" Text="Message Goes Here" VerticalAlignment="Top" Width="472"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="407,222,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
